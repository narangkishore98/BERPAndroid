<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddProductFromBarcodeActivity">

    <TextView
            android:text="Enter Product Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headlineForAddProducts" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.488" android:textStyle="bold" android:textSize="22dp"
            android:textColor="#009688"/>
    <TextView
            android:text="Item Barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLabelForBarcode" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/headlineForAddProducts"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"/>
    <TextView
            android:text="Barcode Here"
            android:layout_width="204dp"
            android:layout_height="17dp"
            android:id="@+id/txtBarcode" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            app:layout_constraintStart_toEndOf="@+id/txtLabelForBarcode" android:layout_marginStart="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/headlineForAddProducts"
            app:layout_constraintHorizontal_bias="0.666" android:textAlignment="textEnd"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtDescription" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/txtBarcode" app:layout_constraintHorizontal_bias="0.494"
            android:hint="Description   "/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtProductName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtBarcode" app:layout_constraintHorizontal_bias="0.494"
            android:hint="Product Name"/>
    <EditText
            android:layout_width="299dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtPrice"
            android:hint="Price" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edtDescription" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Spinner
            android:layout_width="299dp"
            android:layout_height="38dp"
            android:id="@+id/spnrProductType" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/edtPrice"/>
    <Button
            android:text="Add Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddProduct" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spnrProductType" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>