<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_contact_us"
        tools:context=".ContactUsActivity">

    <ImageView
            android:layout_width="287dp"
            android:layout_height="247dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="62dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="62dp" android:layout_marginTop="65dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtContactUs"/>
    <TextView
            android:text="Contact Us "
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/txtContactUs" android:textColor="@color/white"
            android:background="@color/black" android:textStyle="bold" android:textAlignment="center"
            android:textSize="25sp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/txtCallMe"/>
    <TextView
            android:text="+1 (647) 763-9826"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/txtMessageMe"
            android:onClick="goToMakeSms"
            android:textStyle="bold"
            android:textAlignment="center" android:textSize="20sp"
            android:drawableLeft="@drawable/messageicon" android:textColor="@color/design_default_color_primary"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/txtCallMe"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="canadatarlochan5268@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:onClick="goToMakeEmail"
            android:id="@+id/txtEmailMe" android:textStyle="bold"
            android:textAlignment="center" android:textSize="20sp"
            android:drawableLeft="@drawable/emailicon" android:textColor="@color/design_default_color_primary"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="144dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="+1 (416) 436-2548"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:onClick="goToMakeCall"
            android:id="@+id/txtCallMe" android:textStyle="bold"
            android:textAlignment="center" android:textSize="20sp"
            android:drawableLeft="@drawable/callicon" android:textColor="@color/design_default_color_primary"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/txtContactUs"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>