<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp" app:cardBackgroundColor="#00C7C7C7" app:cardCornerRadius="5dp"
            app:contentPadding="5dp" app:cardElevation="5dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="100dp">

            <ImageView
                    android:layout_width="58dp"
                    android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars[2]"
                    android:id="@+id/imgAvatar" android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:layout_weight="1">
                <TextView
                        android:text="Employee Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtEmpDtlName" android:textSize="22sp"/>
                <TextView
                        android:text="Bonus Points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtEmpDtlBonusPoints"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>